{
  "name": "tc-tool",
  "version": "2.0.1",
  "description": "A HOC that provides a tool interface with tC core",
  "main": "dist/index.js",
  "display": "library",
  "scripts": {
    "test": "eslint ./src && jest",
    "prebuild": "rm -rf dist",
    "build": "babel src --out-dir dist --ignore '**/__tests__,**/__mocks__'",
    "prepare": "if [ ! -d './dist/' ]; then npm run build; fi",
    "prepublishOnly": "npm test && npm run build",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/tc-tool.git"
  },
  "author": "unfoldingWord <info@unfoldingword.org>",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/translationCoreApps/tc-tool/issues"
  },
  "jest": {
    "testURL": "http://localhost",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "rootDir": "./"
  },
  "homepage": "https://github.com/translationCoreApps/tc-tool#readme",
  "dependencies": {
    "fs-extra": "^4.0.3",
    "lodash": "^4.17.5",
    "os-locale": "^2.1.0",
    "path-extra": "^4.2.1",
    "prop-types": "^15.6.0",
    "react-localize-redux": "^2.15.1",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^23.6.0",
    "babel-plugin-jest-hoist": "^22.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^23.6.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-jest": "^1.1.1",
    "redux-mock-store": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "redux": "^2.0.0 || ^3.0.0",
    "react-redux": "^5.0.0",
    "react-dom": "^16.0.0"
  }
}
